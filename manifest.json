{
   "manifest_version": 3,
   "name": "newChecker",
   "version": "1.1.0",
   "description": "Amazon SP API ASIN Checker and Product Detailer",
   "author": "FastChecker Team",
   "permissions": [
      "storage",
      "sidePanel",
      "activeTab"
   ],
   "host_permissions": [
      "https://sellingpartnerapi-na.amazon.com/*",
      "https://sellingpartnerapi-eu.amazon.com/*",
      "https://sellingpartnerapi-fe.amazon.com/*",
      "https://*.amazon.com/*",
      "https://fastcheckerwebsocket-production.up.railway.app/*"
   ],
   "background": {
      "service_worker": "background.js"
   },
   "side_panel": {
      "default_path": "sidepanel/sidepanel.html"
   },
   "action": {
      "default_title": "FastChecker"
   },
   "web_accessible_resources": [
      {
         "resources": ["product-ui.css"],
         "matches": ["<all_urls>"]
      }
   ],
   "content_scripts": [
      {
         "matches": ["*://*.amazon.com/*p/*", "*://*.amazon.co.uk/*p/*", "*://*.amazon.de/*p/*", "*://*.amazon.fr/*p/*", "*://*.amazon.es/*p/*", "*://*.amazon.it/*p/*", "*://*.amazon.nl/*p/*", "*://*.amazon.ca/*p/*", "*://*.amazon.com.mx/*p/*", "*://*.amazon.com.au/*p/*", "*://*.amazon.co.jp/*p/*", "*://*.amazon.in/*p/*", "*://*.amazon.com.br/*p/*", "*://*.amazon.cn/*p/*"],
         "js": ["content.js"],
         "css": ["product-ui.css"]
      }
   ],
   "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
   }
}